{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
		"lib": ["esnext"],
		"target": "esnext",
		"module": "esnext",
		"moduleDetection": "force",
		"skipLibCheck": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"emitDeclarationOnly": true,
		"declarationMap": true
  },
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
