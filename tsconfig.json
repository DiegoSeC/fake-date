{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
		"moduleResolution": "nodenext",
    "target": "ESNext",
    "types": [],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true, 
		"skipLibCheck": true,
    "allowImportingTsExtensions": true,
		"noEmit": true,
    "rewriteRelativeImportExtensions": true,
		"esModuleInterop": true
  },
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
